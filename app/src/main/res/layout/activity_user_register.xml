<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alibaba.tangtang.a97shouyou.module.main.ui.UserRegisterActivity">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/goBack"
            android:src="@drawable/back_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/register_title"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:text="用户注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goBack"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_marginTop="5dp"
            android:layout_below="@id/register_title"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </RelativeLayout>
    <EditText
        android:background="@drawable/user_register_input"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:hint="请输入手机号"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/user_register_input"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:background="@drawable/user_register_input"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="请输入验证码"
            />
        <TextView

            android:layout_marginRight="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/getYanZhengMa"
            android:background="@drawable/juxiang"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <EditText
        android:background="@drawable/user_register_input"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入昵称"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <EditText
        android:background="@drawable/user_register_input"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        android:hint="请输入密码"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/user_register_input"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:background="@drawable/user_register_input"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:hint="请输入邀请码（非必填项）"
            />
        <TextView
            android:layout_marginRight="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/getZiDongSaoMiao"
            android:background="@drawable/juxiang"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="扫描自动填写"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!--android:text="@string/agreetext"-->
    <CheckBox
        android:id="@+id/user_grgister_checkbox"
        android:checked="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="写实"
        android:button="@drawable/user_register_radiobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/juxiang2"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="注册"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>
